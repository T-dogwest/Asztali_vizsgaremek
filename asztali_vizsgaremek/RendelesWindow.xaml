<Window x:Class="asztali_vizsgaremek.RendelesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:asztali_vizsgaremek"
        mc:Ignorable="d"
        Title="RendelesWindow" Height="600" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="400" />
            <RowDefinition/>
        </Grid.RowDefinitions>
       
        <Label Content="Kosár: " Grid.Row="0" Grid.Column="0"  HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <StackPanel x:Name="BasketContainer" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top">
            <Label x:Name="kosarLabel" Content="" />
        </StackPanel>
        

        <StackPanel Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100">
            <Button Content="Bezárás" Click="Button_Close"/>
        </StackPanel>
    </Grid>
</Window>
