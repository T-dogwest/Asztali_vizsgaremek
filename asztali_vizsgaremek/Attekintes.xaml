<Page x:Class="asztali_vizsgaremek.Attekintes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:asztali_vizsgaremek"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Attekintes"
      Background="White"
       Height="500" Width="1000">
     

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <DataGrid Grid.Row="0"  x:Name="employeeTable" Margin="10" Height="300" Width="500" HorizontalAlignment="Center" d:ItemsSource="{d:SampleData ItemCount=5}"></DataGrid>
        
        <StackPanel Grid.Row="1" Height="35" Orientation="Horizontal" VerticalAlignment="Bottom" DockPanel.Dock="Bottom">
            <Button  Content="Hozzáad" Width="150" />
            <Button Content="Módosít" Width="150"/>
            <Button Content="Töröl" Width="150" />
        </StackPanel>
        
    </Grid>
</Page>
